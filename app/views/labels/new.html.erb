<h1>Page d'enregistrement des labels</h1>

  <%= form_with(model: @label , local: true) do |form| %>


   <% if @label.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@label.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
          <% @label.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
        <%= form.label :name ,class:" d-flex justify-content-start"%>
        <%= form.text_field :name , class: "form-control"%>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="actions form-row d-flex justify-content-end mt-5">
        <%= form.submit t("helpers.submit.#{controller_name}.#{action_name}", model: Label.model_name.human), id: "search_task", class: "btn btn-success"  %>
    </div>  
  <% end %>
<div class="actions form-row d-flex justify-content-end  mt-5">
    <%= link_to t('common.labels.back'), labels_path %>
</div>  