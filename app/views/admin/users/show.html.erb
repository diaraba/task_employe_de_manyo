<h1>Page de détails de l'utilisateur</h1> 
<div class="d-inline align-items-center mt-2">
  <h4 class="mr-2">Nom</h4>
  <span><%= @user.name %></span>
</div>

<div class="d-inline align-items-center mt-3">
  <h4 class="mr-2">Adresse email</h4>
  <span><%= @user.email %></span>
</div>


<div class="d-inline align-items-center mt-5">
  <h4 class="mr-2">Privilèges</h4>
  <p><%= @user.admin ? 'Oui' : 'Non'%></ul></p>
</div>



<div class="table-responsive">
  <table class="table  table-condensed">
    <thead class="">
      <tr>
        <th scope="col" style="white-space: nowrap;"><%= Task.human_attribute_name(:title) %></th>
        <th scope="col" style="white-space: nowrap;"><%= Task.human_attribute_name(:content) %></th>
        <th scope="col" style="white-space: nowrap;"><%= Task.human_attribute_name(:created_at)%></th>
        <th scope="col" style="white-space: nowrap;"><%= link_to "Date d'expiration", sort_deadline_on: true %></th>
          <th scope="col" style="white-space: nowrap;"><%= link_to "Priorité", sort_priority: true %></th>
        <th scope="col" style="white-space: nowrap;"0> status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.created_at.strftime('%Y-%m-%d %H:%M')   %></td>
          <td><%= task.deadline_on%></td>
          <td><%= task.priority%></td>
          <td><%= task.status%></td>
        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>  

<div class="mt-3 mb-3">
  <%= paginate @tasks %>
</div>


<div class="mt-3 mb-5">
  <%= link_to t('common.tasks.back'),  admin_users_path, class: "btn btn-success" %>
</div>
