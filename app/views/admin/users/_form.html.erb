<%=form_with(model:@user, url: admin_users_path,local:true) do |form|%>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
     <div class="field">
      <%= form.label :name ,class:" d-flex justify-content-start"%>
      <%= form.text_field :name , class: "form-control"%>
    </div>

    <div class="field">
      <%= form.label :email ,class:" d-flex justify-content-start"%>
      <%= form.email_field :email , class: "form-control"%>
    </div>

    <div class="field">
      <%= form.label :password ,class:" d-flex justify-content-start"%>
      <%= form.password_field :password , class: "form-control"%>
    </div>

    <div class="field">
      <%= form.label :password_confirmation ,class:" d-flex justify-content-start"%>
      <%= form.password_field :password_confirmation , class: "form-control"%>
    </div>

  

    <div class="form-group col-md-3 field ">
      <%= form.label :admin%>
      <%= form.check_box :admin  , class: "form-control col-md-2" %>
    </div>

   
    <div class="actions form-row d-flex justify-content-end  mb-5">
        <%= form.submit t("helpers.submit.#{controller_name}.#{action_name}", model: User.model_name.human), id: "search_task", class: "btn btn-success"  %>
    </div>  
<%end%>