<h1><%=t('tasks.index.title') %></h1>


<%= form_with(url: tasks_path, method: :get, scope: :search,local: true) do |form| %>
  <div class="field">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(['Non_démarré', 'Démarré', 'Terminé']), include_blank: true %>
  </div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title , id: "title"%>
  </div>
  <%= form.submit "Rechercher", id: "search_task" %>
<% end %>


<table>
  <thead>
    <tr>
      <th><%Task.human_attribute_name(:title)%></th>
      <th><%Task.human_attribute_name(:content)%></th>
      <th><%Task.human_attribute_name(:created_at)%></th>
      <th> <%= link_to "expiration date", sort_deadline_on: true %></th>
      <th><%= link_to "priority",sort_priority: true %></th>
      <th> status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
       <% if task.user_id == current_user.id %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.created_at.strftime('%Y-%m-%d %H:%M')%></td>
            <td><%= task.deadline_on%></td>
            <td><%= task.priority%></td>
            <td><%= task.status%></td>
            <td id="show-task"><%= link_to  t('common.show'), task %></td>
            <td id="edit-task"><%= link_to  t('common.edit'), edit_task_path(task) %></td>
            <td id="destroy-task"><%= link_to  t('common.destroy'), task, method: :delete, data:  { confirm: t('common.confirm_destroy'), } %></td>
          </tr>
        <%end%>  
    <% end %>
  </tbody>
</table>
 <%= paginate @tasks %>
