<p id="notice"><%= notice %></p>

<h1>Tasks Index Page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.created_at %></td>
            <td id="show-task"><%= link_to 'Show', task %></td>
            <td id="edit-task"><%= link_to 'Edit', edit_task_path(task) %></td>
            <td id="destroy-task"><%= link_to 'Destroy', task, method: :delete, data:  { confirm: 'Are you sure?' } %></td>
          </tr>
    <% end %>
  </tbody>
</table>

<br>

